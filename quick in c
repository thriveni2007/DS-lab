#include <stdio.h>
void swap(int arr[],int a,int b){
    int temp=arr[a];
    arr[a]=arr[b];
    arr[b]=temp;
}
int par(int arr[],int low,int high){
    int  pivot=arr[low];
    int i=low;
    int j=high;
    while(i<j){
        while(arr[i]<=pivot)i++;
        while(arr[j]>pivot)j--;
        if(i<j)swap(arr,i,j);
    }
    swap(arr,low,j);
    return j;
}
void merge(int arr[],int low,int high){
    if(low<high){
        int loc=par(arr,low,high);
        merge(arr,low,loc-1);
        merge(arr,loc+1,high);
    }
}
 
int main() {
    printf("enter size");
    int num;
    scanf("%d",&num);
     int arr[num];
     printf("enter values");
     for(int i=0;i<num;i++){
         scanf("%d",&arr[i]);
     }
     int low=0;
     int high=num-1;
     merge(arr,low,high);
     printf("sorted values");
     for(int i=0;i<num;i++){
         printf("%d ",arr[i]);
     }

    return 0;
}
